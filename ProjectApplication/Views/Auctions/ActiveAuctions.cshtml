@using ProjectApplication.ViewModel;
@model IEnumerable<ProjectApplication.ViewModel.AuctionVM>

@{
    ViewData["Title"] = "ActiveAuctions";
}

<h1>Active Auctions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auctioneer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Auctioneer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDateTime)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })

                    @if (!User.Identity.Name.Equals(item.UserName))
                    {
                        if (item.EndDateTime > DateTime.Now)
                        {
                            @Html.ActionLink("AddBid", "AddBid", new { id = item.Id })
                        }
                        else
                        {
                            <p>Auction has expired</p>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No Active Listings</p>
}