@model ProjectApplication.ViewModel.BidVM

@{
    ViewData["Title"] = "AddBid";
}

<h1>Add Bid to a auction </h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBid" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bidder" class="control-label">Bidder</label>
                <input asp-for="Bidder" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Bid Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Place Bid" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ActiveAuctions">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
